[sub_resource type="Shader" id="Shader_holo"]
code = "shader_type canvas_item;

uniform float time_scale : hint_range(0.1, 2.0) = 0.8;
uniform float intensity : hint_range(0.0, 1.0) = 0.35;
uniform float wave_scale : hint_range(1.0, 10.0) = 4.0;

void fragment() {
	float t = TIME * time_scale;

	// Create rainbow gradient based on position and time
	float wave = sin(UV.x * wave_scale + UV.y * wave_scale * 0.5 + t) * 0.5 + 0.5;
	float wave2 = cos(UV.y * wave_scale - t * 0.7) * 0.5 + 0.5;

	// Rainbow colors
	vec3 color1 = vec3(1.0, 0.4, 0.6);  // Pink
	vec3 color2 = vec3(0.4, 0.8, 1.0);  // Cyan
	vec3 color3 = vec3(0.6, 0.4, 1.0);  // Purple
	vec3 color4 = vec3(1.0, 0.85, 0.4); // Gold

	vec3 rainbow = mix(color1, color2, wave);
	rainbow = mix(rainbow, color3, wave2);
	rainbow = mix(rainbow, color4, sin(t + UV.x * 3.0) * 0.5 + 0.5);

	// Apply shimmer effect
	float shimmer = sin(UV.x * 20.0 + UV.y * 15.0 + t * 3.0) * 0.5 + 0.5;
	shimmer = pow(shimmer, 3.0);

	COLOR = vec4(rainbow, intensity * (0.5 + shimmer * 0.5));
}
"

